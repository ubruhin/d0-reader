{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CMake",
            "type": "shell",
            "command": ["cmake -B build/debug . -DCMAKE_BUILD_TYPE=Debug && cmake -B build/release . -DCMAKE_BUILD_TYPE=Release"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build (debug)",
            "command": "make",
            "args": ["-j8"],
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (release)",
            "command": "make",
            "args": ["-j8"],
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build & download (debug)",
            "type": "shell",
            "command": "make -j8 && ../../run.sh d0-reader.elf",
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build & download (release)",
            "type": "shell",
            "command": "make -j8 && ../../run.sh d0-reader.elf",
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Clean output",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
